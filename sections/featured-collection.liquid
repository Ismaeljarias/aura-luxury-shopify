{% comment %}
  ==============================================================================
  Featured Collection Section
  ==============================================================================
  
  Displays a curated collection of products with elegant styling.
  Perfect for showcasing seasonal essentials or featured products.
  
  ==============================================================================
{% endcomment %}

<style>
  .featured-collection {
    padding: 5rem 0;
    background-color: #F5F3F0;
  }

  .featured-collection__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 3rem;
  }

  .featured-collection__titles {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .featured-collection__label {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #D4A847;
    margin: 0;
  }

  .featured-collection__heading {
    font-family: 'Noto Serif Display', Georgia, serif;
    font-size: clamp(2rem, 3vw, 2.5rem);
    font-weight: 400;
    margin: 0;
    color: #000;
  }

  .featured-collection__view-all {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    color: #000;
    transition: opacity 0.3s ease;
  }

  .featured-collection__view-all:hover {
    opacity: 0.7;
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .product-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-decoration: none;
  }

  .product-card__image-wrapper {
    position: relative;
    overflow: hidden;
    background-color: #E8E6E3;
    aspect-ratio: 3 / 4;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .product-card:hover .product-card__image {
    transform: scale(1.05);
  }

  .product-card__info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .product-card__title {
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #000;
    margin: 0;
  }

  .product-card__variant {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
  }

  .product-card__price {
    font-size: 1rem;
    font-weight: 600;
    color: #000;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .featured-collection {
      padding: 3rem 0;
    }

    .featured-collection__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .featured-collection__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>

<div class="featured-collection">
  <div class="page-width">
    <div class="featured-collection__header">
      <div class="featured-collection__titles">
        {%- if section.settings.collection_label != blank -%}
          <p class="featured-collection__label">{{ section.settings.collection_label }}</p>
        {%- endif -%}
        <h2 class="featured-collection__heading">{{ section.settings.heading }}</h2>
      </div>
      {%- if section.settings.show_view_all and section.settings.collection != blank -%}
        <a href="{{ section.settings.collection.url }}" class="featured-collection__view-all">
          {{ section.settings.view_all_text }}
        </a>
      {%- endif -%}
    </div>

    {%- liquid
      assign collection = section.settings.collection
    -%}

    {%- if collection != blank and collection.products_count > 0 -%}
      <div class="featured-collection__grid">
        {%- for product in collection.products limit: 3 -%}
          <a href="{{ product.url }}" class="product-card">
            <div class="product-card__image-wrapper">
              {%- if product.featured_image -%}
                {{
                  product.featured_image
                  | image_url: width: 800
                  | image_tag:
                    loading: 'lazy',
                    class: 'product-card__image',
                    alt: product.featured_image.alt | escape
                }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
              {%- endif -%}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title">{{ product.title }}</h3>
              {%- if product.variants.first.title != 'Default Title' -%}
                <p class="product-card__variant">{{ product.variants.first.title }}</p>
              {%- elsif product.metafields.custom.description != blank -%}
                <p class="product-card__variant">{{ product.metafields.custom.description }}</p>
              {%- endif -%}
              <p class="product-card__price">{{ product.price | money }}</p>
            </div>
          </a>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="featured-collection__grid">
        {%- for i in (1..3) -%}
          <div class="product-card">
            <div class="product-card__image-wrapper">
              {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title">Product Title</h3>
              <p class="product-card__variant">Product description</p>
              <p class="product-card__price">$0.00</p>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured collection",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "collection_label",
      "label": "Collection label",
      "default": "CURATED SELECTION"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Seasonal Essentials"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' link",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "VIEW ALL"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
