{% comment %}
  ==============================================================================
  Rich Text with Media Section
  ==============================================================================
  
  Custom section for displaying rich text content alongside media elements.
  Perfect for storytelling, brand philosophy, and craftsmanship highlights.
  
  ==============================================================================
{% endcomment %}

<style>
  .rich-text-media {
    padding: 4rem 0;
    background-color: #FFFFFF;
  }

  .rich-text-media__wrapper {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 3rem;
    align-items: start;
  }

  .rich-text-media__content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-right: 2rem;
    max-width: 600px;
  }

  .rich-text-media__images {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 500px;
    position: relative;
  }

  .rich-text-media__quote {
    font-family: 'Noto Serif Display', Georgia, serif;
    font-style: italic;
    font-weight: 400;
    font-size: clamp(2.5rem, 4vw, 4rem);
    line-height: 1.3;
    margin: 0;
    border-left: none;
    padding-left: 0;
  }

  .rich-text-media__text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #666;
  }

  .rich-text-media__link {
    display: inline-block;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    text-decoration: none;
    color: #000;
    border-bottom: 1px solid #D4A847;
    padding-bottom: 2px;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .rich-text-media__link:hover {
    opacity: 0.7;
  }

  .rich-text-media__image {
    overflow: hidden;
  }

  .rich-text-media__image:first-child {
    width: 45%;
    align-self: flex-start;
  }

  .rich-text-media__image:last-child {
    width: 55%;
    align-self: flex-end;
    margin-top: -15rem;
  }

  .rich-text-media__image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  @media screen and (max-width: 989px) {
    .rich-text-media__wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .rich-text-media__content {
      padding-right: 0;
    }
  }
</style>

<div class="rich-text-media section-{{ section.id }}-padding">
  <div class="rich-text-media__wrapper page-width">
    <div class="rich-text-media__content">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'quote' -%}
            <blockquote 
              class="rich-text-media__quote"
              style="color: {{ block.settings.quote_color }};"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.quote_text }}
            </blockquote>
          
          {%- when 'text' -%}
            <div 
              class="rich-text-media__text rte"
              style="color: {{ block.settings.text_color }};"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </div>
          
          {%- when 'link' -%}
            {%- if block.settings.link_label != blank -%}
              <a 
                href="{{ block.settings.link_url }}"
                class="rich-text-media__link"
                style="color: {{ block.settings.link_color }};"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.link_label }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    <div class="rich-text-media__images">
      {%- for block in section.blocks -%}
        {%- if block.type == 'image' -%}
          {%- if block.settings.image != blank -%}
            <div 
              class="rich-text-media__image"
              {{ block.shopify_attributes }}
            >
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag:
                  loading: 'lazy',
                  width: block.settings.image.width,
                  height: block.settings.image.height
              }}
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rich text with media",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#F5F3F0"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "Quote",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "quote_text",
          "label": "Quote text",
          "default": "<p><em>\"Luxury is not about being noticed, it's about being remembered for the quality that whispers.\"</em></p>"
        },
        {
          "type": "color",
          "id": "quote_color",
          "label": "Quote color",
          "default": "#000000"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Our materials are sourced from the historic mills of Biella, Italy. Each thread of grade A cashmere and mulberry silk is selected for its natural luster and enduring softness.</p>"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#666666"
        }
      ]
    },
    {
      "type": "link",
      "name": "Link",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label",
          "default": "THE CRAFTSMANSHIP"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "color",
          "id": "link_color",
          "label": "Link color",
          "default": "#000000"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich text with media",
      "blocks": [
        {
          "type": "quote"
        },
        {
          "type": "text"
        },
        {
          "type": "link"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
